class Solution{
public:
     void f(vector<string>&s,string t,int n,int o,int z)
    {
        if(t.size()==n)
        {
            s.push_back(t);
            return;
        }
        f(s,t+"1",n,o+1,z);
        if(o>z)
        {
            f(s,t+"0",n,o,z+1);
        }
    }

	vector<string> NBitBinary(int n)
	{
	    vector<string>s;
        string t="";
        f(s,t,n,0,0);
        return s;
	    
	}
};
