class Solution {
  public:
    void zigZag(int n, vector<int> &arr) {
        for(int i=0;i<arr.size()-1;i++){
            if((i%2 == 0) && arr[i]>arr[i+1]){
                swap(arr[i],arr[i+1]);
            }
            else if((i%2) && arr[i]<arr[i+1]){
                swap(arr[i],arr[i+1]);
            }
            
        }
    }
};
